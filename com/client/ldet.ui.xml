<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:m="urn:import:gwt.material.design.client.ui"
             xmlns:ma="urn:import:gwt.material.design.addins.client"            >

 <m:MaterialContainer ui:field="c">
 <m:MaterialTitle title="Land Details" paddingLeft="550"/>
 
 
 <m:MaterialRow addStyleNames="code">
      
      <m:MaterialCollapsible type="POPOUT">
      
        <m:MaterialCollapsibleItem>
          <m:MaterialCollapsibleHeader backgroundColor="GREEN" waves="DEFAULT">
            <m:MaterialLink text="DETAILS" iconType="CONTROL_POINT" iconPosition="LEFT" textColor="WHITE"/>
          </m:MaterialCollapsibleHeader>
          <m:MaterialCollapsibleBody backgroundColor="WHITE">
           <m:MaterialLongBox ui:field="lon" label="Longitude"/> 
    <m:MaterialLongBox ui:field="lat" label="Latitude"/>
    <m:MaterialFloatBox ui:field="larea" label="Land area"/>
          </m:MaterialCollapsibleBody>
        </m:MaterialCollapsibleItem>
      </m:MaterialCollapsible>
      </m:MaterialRow>
      
   
  <m:MaterialRow addStyleNames="code">
      
      <m:MaterialCollapsible type="POPOUT">
      
        <m:MaterialCollapsibleItem>
          <m:MaterialCollapsibleHeader backgroundColor="GREEN" waves="DEFAULT">
            <m:MaterialLink text="Add Nutrients" iconType="CONTROL_POINT" iconPosition="LEFT" textColor="WHITE"/>
          </m:MaterialCollapsibleHeader>
          <m:MaterialCollapsibleBody backgroundColor="WHITE">
           <m:MaterialFloatBox ui:field="nut" label="list the nutrition level"/>
            </m:MaterialCollapsibleBody>
        </m:MaterialCollapsibleItem>
      </m:MaterialCollapsible>
      </m:MaterialRow>
      
      
       <m:MaterialRow addStyleNames="code">
      
      <m:MaterialCollapsible type="POPOUT">
      
        <m:MaterialCollapsibleItem>
          <m:MaterialCollapsibleHeader backgroundColor="GREEN" waves="DEFAULT">
            <m:MaterialLink text="Crops" iconType="CONTROL_POINT" iconPosition="LEFT" textColor="WHITE"/>
          </m:MaterialCollapsibleHeader>
          <m:MaterialCollapsibleBody backgroundColor="WHITE">
               
      
    <m:MaterialRow addStyleNames="code">
    
      <m:MaterialRow>
		<m:MaterialTextArea ui:field="crop" text="List the name of crops here."></m:MaterialTextArea>
      </m:MaterialRow>
      </m:MaterialRow>
      
          </m:MaterialCollapsibleBody>
        </m:MaterialCollapsibleItem>
      </m:MaterialCollapsible>
      </m:MaterialRow>
   <m:MaterialRow paddingLeft="550">
   <m:MaterialButton ui:field="back" text="Back"  width="35%"/>
   </m:MaterialRow>
    <m:MaterialRow  paddingLeft="550">
   <m:MaterialButton ui:field="sub" text="Submit" width="35%"/> 
   </m:MaterialRow>
   </m:MaterialContainer>
</ui:UiBinder> 